{
  "manifest_version": 2,
  "name": "Twitter Likes Blocker",
  "version": "1.0.1",

  "description": "Removes from your timeline what people liked.",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "background": {
    "scripts": ["removeLikes.js"]
  },

  "page_action": {
    "default_icon": "icons/on.svg",
    "browser_style": true
  },
  
  "permissions": [
    "activeTab",
    "tabs",
    "*://twitter.com/*"
  ]

}
